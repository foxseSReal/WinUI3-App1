<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.View.Page1Calendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="430"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Column 1-->
        <StackPanel>
            <CalendarView x:Name="_Calendar" Width="400" Height="400" Language="tr" Margin="20 30 0 0" SelectedBorderBrush="SandyBrown" 
                          SelectedForeground="SandyBrown" 
                          TodayDisabledBackground="Red"
                          TodayBackground="AntiqueWhite"
                          IsTodayHighlighted="True"
                          TodayPressedBackground="SandyBrown"
                          TodaySelectedInnerBorderBrush="SandyBrown"
                          PressedBorderBrush="Transparent"
                          PressedForeground="SandyBrown"
                          SelectedPressedForeground="SaddleBrown"
                          SelectedPressedBorderBrush="SaddleBrown"
                          IsOutOfScopeEnabled="True" 
                          IsGroupLabelVisible="True"
                          SelectionMode="{x:Bind ViewModel.CalendarMode, Mode=OneWay}"
                          CalendarIdentifier="GregorianCalendar"
                          CalendarItemBorderThickness="1.2"
                          SelectedDatesChanged="_Calendar_SelectedDatesChanged"
                          />
            <StackPanel Margin="20 0 0 0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">
                <CheckBox x:Name="_CalendarSelectionModes" Content="{x:Bind ViewModel.CheckBoxContent, Mode=OneWay}"
                          IsChecked="{x:Bind ViewModel.CheckBoxStatus ,Mode=TwoWay}"
                          IsThreeState="True"/>
                <InfoBar  x:Name="_InfoBar" Height="120" Width="400" IsOpen="{x:Bind ViewModel.IsInfoBarOpen, Mode=OneWay}" FontWeight="Bold" Severity="Warning" Title="Seçim Sayısı" Message="Multiple Seçim kısmında sadece 7 gün seçilir.">
                    <InfoBar.ActionButton>
                        <Button Content="Ayarlar" Click="InfoBarButton_Click"/>
                    </InfoBar.ActionButton>
                </InfoBar>
            </StackPanel>

            <!--Column 2 -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
