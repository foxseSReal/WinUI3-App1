<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="App1">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView SelectionChanged="NavView_SelectionChanged" Loaded="NavView_Loaded" x:Name="NavView">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Calendar" FontWeight="Bold" FontSize="24" Content="Takvim" Tag="Calendar" />
                <NavigationViewItem Icon="List" FontWeight="Bold" FontSize="24" Content="Kayıtları Listele" Tag="EventList" />
                <NavigationViewItem Icon="Add" FontWeight="Bold" FontSize="24" Content="Kayıt Ekle" Tag="EventAdd" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
